{
  "name": "agentic-pm",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous personal project management assistant",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/agentic-project-manager.git"
  },
  "author": "Agentic PM Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "cdk:synth": "pnpm --filter @agentic-pm/cdk synth",
    "cdk:deploy": "pnpm --filter @agentic-pm/cdk deploy",
    "cdk:diff": "pnpm --filter @agentic-pm/cdk diff",
    "db:local": "docker-compose up localstack -d",
    "db:setup": "npx tsx scripts/setup-local-db.ts",
    "db:seed": "npx tsx scripts/seed-local-db.ts",
    "db:reset": "pnpm db:setup && pnpm db:seed",
    "local:setup": "npx tsx scripts/setup-local-aws.ts",
    "local:invoke": "npx tsx scripts/invoke-handler.ts",
    "local:state-machine": "npx tsx scripts/invoke-state-machine.ts",
    "validate-env": "bash scripts/validate-env.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/client-eventbridge": "^3.985.0",
    "@aws-sdk/client-secrets-manager": "^3.500.0",
    "@aws-sdk/client-sfn": "^3.985.0",
    "@aws-sdk/client-sns": "^3.985.0",
    "@aws-sdk/client-sqs": "^3.985.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  }
}
