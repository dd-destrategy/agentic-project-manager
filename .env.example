# AWS Configuration
AWS_REGION=eu-west-2
TABLE_NAME=agentic-pm-dev
TABLE_ARN=arn:aws:dynamodb:eu-west-2:123456789012:table/agentic-pm-dev

# Authentication (GENERATE THESE - DO NOT USE EXAMPLES)
# Generate NEXTAUTH_SECRET: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here-min-32-chars
# Generate NEXTAUTH_PASSWORD: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
NEXTAUTH_PASSWORD=$2a$10$your-hashed-password-here

# Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Email & Notifications
ALERT_EMAIL=admin@example.com
SES_FROM_ADDRESS=pm-agent@example.com
SES_VERIFIED_DOMAIN=example.com

# Application Configuration
ENVIRONMENT=dev
NODE_ENV=development
LOG_LEVEL=debug

# Development Only (Optional)
# DYNAMODB_ENDPOINT=http://localhost:8000

# CDK Deployment (Optional - set via AWS CLI)
# CDK_DEFAULT_ACCOUNT=123456789012
# CDK_DEFAULT_REGION=eu-west-2
